<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <!-- the theme applied to the entire application -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar" >

    </style>

    <!-- Blue Theme - blue action bar -->
    <style name="Blue.Base" parent="AppTheme.Base" >
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
    </style>
    
    <style
        name="item_Title"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">#005494</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">14sp</item >
    </style>

    <style
        name="item_short_text"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">#727f7f</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">12sp</item >
    </style>

    <style
        name="rubriky_item_list"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">#727f7f</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">22sp</item>
        <!-- <item name="android:textAlignment">center</item> -->
        <item name="android:background">#ffffffff</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">3dp</item>

    </style>

    <style
        name="volley_error"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#FF0000</item>
    </style>

    <style
        name="button_load_more"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">#000000</item>
        <!-- <item name="android:textColor">#ffffffff</item> -->
        <item name="android:typeface">serif</item>
        <!-- <item name="android:background">#005494</item> -->
        <!-- <item name="android:textStyle">bold</item> -->

   </style>

</resources>
