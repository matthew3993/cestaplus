<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <!-- the theme applied to the entire application -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >

    </style>

    <style name="AppTheme.WithoutActionBar" parent="AppTheme" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Blue Theme - blue action bar -->
    <style name="Blue" parent="AppTheme" >
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
    </style>

    <style
        name="rubriky_item_list"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">#727f7f</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">22sp</item>
        <!-- <item name="android:textAlignment">center</item> -->
        <item name="android:background">#ffffffff</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">3dp</item>

    </style>

    <style
        name="volley_error"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#FF0000</item>
    </style>

    <style
        name="button_load_more"
        parent="AppTheme.WithoutActionBar">

        <item name="android:textColor">#000000</item>
        <!-- <item name="android:textColor">#ffffffff</item> -->
        <item name="android:typeface">serif</item>
        <!-- <item name="android:background">#005494</item> -->
        <!-- <item name="android:textStyle">bold</item> -->
   </style>

    <style
        name="settingsToolbarTheme"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- color of the title text in the Toolbar, in the Theme.AppCompat theme -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- color of the text of action (menu) items in the Toolbar, at least in the Theme.AppCompat theme.
        For some reason, they already get the textColorPrimary when running on API 21, but not on older versions of
        Android, so this is only necessary to support older Android versions. -->
        <item name="actionMenuTextColor">@color/white</item>

        <!-- color of the navigation icon (arrow) and menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>
