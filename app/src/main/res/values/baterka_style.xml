<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="baterka_Author"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item> <!-- @color/transparent -->

        <item name="android:textSize">@dimen/baterka_author_text_size</item>
        <item name="android:textAllCaps">true</item >
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <!-- padding specifies amount of background color around transparent text -->
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>

        <item name="android:layout_marginLeft">@dimen/baterka_author_margin_left</item>
        <item name="android:layout_marginRight">@dimen/baterka_author_margin_right</item>
        <item name="android:layout_marginTop">@dimen/baterka_author_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/baterka_author_margin_bottom</item>
    </style>

    <style
        name="baterka_Title"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">@dimen/baterka_title_text_size</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textAllCaps">true</item >
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:layout_marginLeft">@dimen/baterka_title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/baterka_title_margin_right</item>
        <item name="android:layout_marginTop">@dimen/baterka_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/baterka_title_margin_bottom</item>
    </style>

    <style
        name="baterka_Coordinates"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item >
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style
        name="baterka_Scripture"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="fontPath">fonts/LatoLatin-LightItalic.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style
        name="baterka_DateRelativeLayout"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:background">@color/dateBackground</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style
        name="baterka_DayInWeek"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/dayInWeekAndDate</item>

        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textAllCaps">true</item >
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style
        name="baterka_Date"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/dayInWeekAndDate</item>

        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textAllCaps">true</item >
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style
        name="baterka_MeditationTitle"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/meditationTitle</item>

        <item name="android:textSize">25sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textAllCaps">true</item >
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style
        name="baterka_MeditationText"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/meditationText</item>

        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- QUOTATION BOX START ******************************************************* -->
    <style
        name="baterka_QuotationBoxRelativeLayout"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:background">@drawable/quotation_box_bg</item>

        <!-- This is outer margin of box - from edge of screen or other views to border -->
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style
        name="baterka_QuotationText"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/quotationText</item>

        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="fontPath">fonts/Georgia-Italic.ttf</item>

        <!-- DON'T FORGET PADDING in "quotation_box_bg.xml" !!! -->

        <!-- This is margin of text view, not box-->
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style
        name="baterka_QuotationAuthor"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/quotationAuthor</item>

        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textAllCaps">true</item >
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <!-- DON'T FORGET PADDING in "quotation_box_bg.xml" !!! -->

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <!-- QUOTATION BOX END ******************************************************* -->

    <!-- DEPTH START ************************************************************ -->
    <!-- depth title style not used for now -->
    <style
        name="baterka_DepthTitle"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/meditationTitle</item>

        <item name="android:textSize">25sp</item>
