        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <!-- SOURCE:  http://stackoverflow.com/questions/5049852/android-drawing-separator-divider-line-in-layout -->
    <style name="baterka_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style
        name="baterka_CtvDepths"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:padding">10dp</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style
        name="baterka_TvDepths"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/meditationText</item>

        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <item name="android:padding">5dp</item>

        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!-- DEPTH END ************************************************************** -->

    <!-- TIP START ************************************************************** -->
