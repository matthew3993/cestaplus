<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- in activity LOGGED:
     marginTop is always 0dp
     setting martingBottom to desired value -->

    <style
        name="logged_MainName"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/meditationTitle</item> <!-- same as meditation title -->

        <item name="android:textSize">@dimen/main_name_text_size</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item> <!-- exception from rule above - most top view -->
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style
        name="logged_ActualStatus"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/meditationTitle</item> <!-- same as meditation title -->

        <item name="android:textSize">@dimen/actual_status_text_size</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>  <!-- marginTop is always 0dp -->
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <!-- SOURCE:  http://stackoverflow.com/questions/5049852/android-drawing-separator-divider-line-in-layout -->
    <style name="logged_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/accountDataItemDivider</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>    <!-- marginTop is always 0dp -->
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="logged_DividerFullWidth"
        parent="logged_divider">

        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="logged_DividerBeforeInfoPoints"
        parent="logged_divider">

        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="logged_InfoPointsDivider"
        parent="logged_divider">

        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">20dp</item>

        <item name="android:layout_marginBottom">15dp</item> <!-- should be same as 'logged_InfoPointText layout_marginBottom' -->
    </style>

    <style
        name="logged_ItemTitle"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/accountDataItemTitle</item>

        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item> <!-- marginTop is always 0dp -->
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style
        name="logged_ItemText"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/meditationText</item> <!-- same as meditation title -->

        <item name="android:textSize">@dimen/item_text_text_size</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item> <!-- marginTop is always 0dp -->
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style
        name="logged_ItemFullNameText"
        parent="logged_ItemText">

        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>
    </style>

    <style
        name="logged_ThankForYourSupport"
        parent="logged_ItemText">

        <item name="android:textSize">@dimen/thank_for_support_text_text_size</item>

        <item name="android:layout_marginTop">20dp</item> <!-- exception -->
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style
        name="logged_InfoPointIntro"
        parent="logged_ThankForYourSupport">

        <item name="android:layout_marginTop">0dp</item> <!-- exception -->
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- PADDING is radius of circle, 10dp is good value :) -->
    <style
        name="logged_CtvInfoPoint"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/accountDataInfoPoint</item>

        <item name="android:textSize">@dimen/info_point_number_text_size</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <item name="android:padding">10dp</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">0dp</item>  <!-- marginTop is always 0dp -->
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style
        name="logged_InfoPointText"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/meditationText</item>

        <item name="android:textSize">@dimen/info_point_text_text_size</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <!--
        <item name="android:padding">5dp</item>  5dp !!!
        -->

        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>  <!-- marginTop is always 0dp -->
        <item name="android:layout_marginBottom">15dp</item> <!-- should be same as 'logged_InfoPointsDivider layout_marginBottom' -->
    </style>

    <!-- "BUTTON" PROLONG SUBSCRIPTION - SUBSCRIPTION OK START ************************ -->

    <style
        name="logged_ProlongSubscriptionRelativeLayout">

        <item name="android:background">@color/btnProlongSubscriptionBg</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style
        name="logged_ProlongSubscriptionText">

        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">@dimen/prolong_subscription_text_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:padding">@dimen/prolong_subscription_text_padding</item>

    </style>

    <style
        name="logged_ProlongSubscriptionImageView">

        <item name="android:layout_marginRight">20dp</item>

    </style>

    <!-- "BUTTON" PROLONG SUBSCRIPTION - SUBSCRIPTION OK END ************************ -->

    <style
        name="logged_BtnLogout">

        <item name="android:background">@color/btn_logut_bg</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">@dimen/prolong_subscription_text_text_size</item> <!-- same as btnProlongSubscription -->
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">20dp</item>

    </style>

    <!-- "BUTTON" PROLONG SUBSCRIPTION - SUBSCRIPTION EXPIRED START ************************ -->

    <style
        name="logged_ProlongSubscriptionRelativeLayout_SubscriptionExpired"
        parent="logged_ProlongSubscriptionRelativeLayout">

        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <!-- "BUTTON" PROLONG SUBSCRIPTION - SUBSCRIPTION EXPIRED END ************************ -->

    <style
        name="logged_BtnLogout_SubscriptionExpired"
        parent="logged_BtnLogout">

        <item name="android:layout_marginTop">20dp</item>

    </style>

    <style
        name="logged_NetworkErrorRelativeLayout">

        <item name="android:padding">0dp</item>

        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!-- android:gravity SOURCE: https://stackoverflow.com/questions/4789550/how-to-center-a-two-line-text-in-a-textview-on-android -->
    <!-- <item name="android:padding">5dp</item> -->
    <style
        name="logged_NetworkErrorText">

        <item name="android:textColor">@color/black</item>

        <item name="android:textSize">@dimen/network_error_text_text_size</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:gravity">center_horizontal</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style
        name="logged_NetworkErrorImageView">

    </style>
</resources>