<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ******************************* HEADER START ******************************* -->
    <style
        name="header_Author"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item> <!-- @color/transparent -->

        <item name="android:textSize">@dimen/header_author_text_size</item>
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <!-- padding specifies amount of background color around transparent text -->
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>

        <item name="android:layout_marginLeft">@dimen/header_author_margin_left</item>
        <item name="android:layout_marginRight">@dimen/header_author_margin_right</item>
        <item name="android:layout_marginTop">@dimen/header_author_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/header_author_margin_bottom</item>
    </style>

    <!--
    ***** !!! WARNING: DO NOT use android:textAllCaps="true" if you want to use images in SpannableString!!!
    Using android:textAllCaps="true" will make images disappear!!!! *****
    <item name="android:textAllCaps">true</item >
    -->
    <style
        name="header_Title"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">@dimen/header_title_text_size</item>
        <item name="android:lineSpacingMultiplier">1.2</item>

        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:layout_marginLeft">@dimen/header_title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/header_title_margin_right</item>
        <item name="android:layout_marginTop">@dimen/header_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/header_title_margin_bottom</item>
    </style>

    <style
        name="header_short_text"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">@dimen/header_short_text_size</item >
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="fontPath">fonts/LatoLatin-Light.ttf</item>

        <item name="android:layout_marginLeft">@dimen/header_short_margin_left</item>
        <item name="android:layout_marginRight">@dimen/header_short_margin_right</item>
        <item name="android:layout_marginTop">@dimen/header_short_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/header_short_margin_bottom</item>
    </style>

    <!-- SOURCE:  http://stackoverflow.com/questions/5049852/android-drawing-separator-divider-line-in-layout -->
    <style name="header_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>

        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <!-- ************************** HEADER END ******************************* -->
</resources>