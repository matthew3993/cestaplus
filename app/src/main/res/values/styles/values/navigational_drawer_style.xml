<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    ***** !!! WARNING: DO NOT use android:textAllCaps="true" if you want to use images in SpannableString!!!
    Using android:textAllCaps="true" will make images disappear!!!! *****
    <item name="android:textAllCaps">true</item >
    <item name="android:layout_marginTop">@dimen/nav_dr_group_item_title_margin_top_bottom</item>
    <item name="android:layout_marginBottom">@dimen/nav_dr_group_item_title_margin_top_bottom</item>
    -->

    <!-- HEADER ***** -->
    <style
        name="nav_dr_header_full_name"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">@dimen/nav_dr_header_full_name_text_size</item>
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:layout_marginLeft">@dimen/nav_dr_group_item_title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/nav_dr_group_item_title_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/nav_dr_header_full_name_margin_bottom</item>
    </style>

    <style
        name="nav_dr_header_email"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.75</item>

        <item name="android:textSize">@dimen/nav_dr_header_full_name_text_size</item>
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <item name="android:layout_marginLeft">@dimen/nav_dr_group_item_title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/nav_dr_group_item_title_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/nav_dr_header_email_margin_bottom</item>

    </style>

    <style
        name="nav_dr_header_subscription_expired"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/red</item>

        <item name="android:textSize">@dimen/nav_dr_header_full_name_text_size</item>
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:layout_marginLeft">@dimen/nav_dr_group_item_title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/nav_dr_group_item_title_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/nav_dr_header_email_margin_bottom</item>

    </style>

    <!-- GROUP ITEM ***** -->
    <style
        name="nav_dr_group_item_icon"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:layout_marginLeft">@dimen/nav_dr_group_item_icon_left_right_margin</item>
        <item name="android:layout_marginRight">@dimen/nav_dr_group_item_icon_left_right_margin</item>

        <item name="android:alpha">0.64</item>
    </style>

    <style
        name="nav_dr_group_item_title"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/articleItemShortText</item>

        <item name="android:textSize">@dimen/nav_dr_group_item_title_text_size</item>
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:layout_marginLeft">@dimen/nav_dr_group_item_title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/nav_dr_group_item_title_margin_right</item>

    </style>

    <!-- CHILD ITEM ***** -->
    <style
        name="nav_dr_child_item_title"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/articleItemShortText</item>

        <item name="android:textSize">@dimen/nav_dr_list_item_text_size</item>
        <item name="fontPath">fonts/LatoLatin-Regular.ttf</item>

        <item name="android:layout_marginLeft">@dimen/nav_dr_child_item_title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/nav_dr_child_item_title_margin_right</item>
        <item name="android:layout_marginTop">@dimen/nav_dr_child_item_title_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/nav_dr_child_item_title_margin_top_bottom</item>
    </style>
    <!-- ************************** HEADER END ******************************* -->
</resources>