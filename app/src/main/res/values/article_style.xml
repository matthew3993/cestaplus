<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="article_date"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:background">@color/articleDateBackground</item>
        <item name="android:textColor">@color/dayInWeekAndDate</item>

        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textAllCaps">true</item >
        <item name="fontPath">fonts/LatoLatin-Black.ttf</item>

        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>

        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>