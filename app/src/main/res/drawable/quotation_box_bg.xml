<?xml version="1.0" encoding="utf-8"?>

<!-- SOURCES:
        http://stackoverflow.com/questions/17774689/android-round-rect-border-for-layouts
        http://stackoverflow.com/questions/6698927/border-in-shape-xml
        https://developer.android.com/guide/topics/resources/drawable-resource.html#Shape
        http://stackoverflow.com/questions/3496269/how-do-i-put-a-border-around-an-android-textview
        -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@color/transparent"/>

    <stroke
        android:width="2dp"
        android:color="@color/quotationBoxBorder"/>

    <!-- This is inner padding of box - from border to other views
         inside the box -->
    <padding
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"/>

    <corners
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"/>

</shape>