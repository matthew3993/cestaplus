<?xml version="1.0" encoding="utf-8"?>
<!-- Change background color on click:
     SOURCE: http://stackoverflow.com/questions/10318642/highlight-for-selected-item-in-expandable-list
     Take a look at first comment on accepted answer. -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_dr_group_item_layout_height"

    android:background="@drawable/selector_nav_dr_list_item_bg"
    >

    <ImageView
        android:id="@+id/ivIcon"
        style="@style/nav_dr_group_item_icon"

        android:layout_width="@dimen/nav_dr_group_item_icon_size"
        android:layout_height="@dimen/nav_dr_group_item_icon_size"

        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/textTitle"
        style="@style/nav_dr_group_item_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/ivIcon"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
