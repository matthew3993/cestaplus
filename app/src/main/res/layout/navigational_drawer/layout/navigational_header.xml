<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/coordinatesAndScriptureBackground">

    <RelativeLayout
        android:id="@+id/navDrHeaderLogoRelativeLayout"

        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_dr_header_layout_height"
        >

        <ImageView
            android:id="@+id/ivNavDrHeaderLogo"

            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_dr_header_image_height"

            android:src="@drawable/cestaplus_full_logo"

            android:layout_centerVertical="true"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
        />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvNavDrFullName"
        style="@style/nav_dr_header_full_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/navDrHeaderLogoRelativeLayout"

        android:text="@string/not_logged_user"
        />

    <TextView
        android:id="@+id/tvNavDrEmail"
        style="@style/nav_dr_header_email"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/tvNavDrFullName"

        android:text="@string/some_email"
        />

    <TextView
        android:id="@+id/tvNavDrSubscriptionExpired"
        style="@style/nav_dr_header_subscription_expired"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/tvNavDrEmail"

        android:visibility="gone"
        android:text="@string/subscription_expired"
        />

</RelativeLayout>