<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.cestaplus.cestaplusapp.activities.SectionActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/tvVolleyErrorSection"
        android:text="Chyba pripojenia na server!"
        android:textColor="#000000"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/ivRefreshSection"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivRefreshSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_refresh_black_48dp"
        android:visibility="gone"
        />

</RelativeLayout>
