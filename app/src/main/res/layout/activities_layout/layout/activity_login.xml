<?xml version="1.0" encoding="utf-8"?>

<!--
    android:focusableInTouchMode="true" to stop EditText from gaining focus at Activity startup
    SOURCE: comments (@Herman) of question: https://stackoverflow.com/questions/1555109/stop-edittext-from-gaining-focus-at-activity-startup?page=1&tab=votes#tab-top

   android:layout_gravity="center"
   -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/login_RootLinearLayout"
    style="@style/login_RootLinearLayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    android:focusableInTouchMode="true"
    >

    <include
        android:id="@+id/login_LayoutWithOutKeyboard"
        layout="@layout/login_without_keyboard"/>

    <include
        android:id="@+id/login_LayoutWithKeyboard"
        layout="@layout/login_with_keyboard"/>

</LinearLayout>