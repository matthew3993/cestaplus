-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@drawable/custom_bg"
        android:clickable="true"
        android:orientation="horizontal"
        >
        <!--"@drawable/custom_bg" -->
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/nivBaterka"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal|top"

                android:maxWidth="120dp"
                android:maxHeight="80dp"

                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"

            />

            <TextView
                android:id="@+id/item_tvTitle"
                style="@style/item_Title"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20sp"

                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/nivBaterka"

                android:text="Tu bude nadpis"

                android:maxLines="2"
                android:minLines="1"
                android:paddingTop="5dp"

                />

            <TextView
                android:id="@+id/item_tvShortText"
                style="@style/item_short_text"
                android:text="tu bude popis"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="15sp"

                android:layout_below="@+id/item_tvTitle"
                android:layout_toRightOf="@+id/nivBaterka"

                android:layout_alignLeft="@+id/item_tvTitle"
                android:layout_alignRight="@+id/item_tvTitle"

                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"

                android:minLines="1"
                android:maxLines="4"
                android:paddingBottom="5dp"
         />
            <!-- android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                android:layout_alignParentLeft="false"

                android:layout_alignParentStart="false"-->


            <ImageView
                android:id="@+id/item_ivLock"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/old_lock"
                android:layout_marginLeft="70dp"
                android:layout_below="@+id/item_tvTitle"
                android:layout_alignTop="@id/nivBaterka"
                android:layout_alignLeft="@id/nivBaterka"
                android:layout_marginTop="40dp"
                />

    </RelativeLayout>
