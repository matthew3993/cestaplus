<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.cestaplus.cestaplusapp" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <!-- Always required on api < 21, needed to keep a wake old_lock while your job is running -->
    <uses-permission android:name="android.permission.WAKE_LOCK" >
    </uses-permission>

    <!-- Required on api < 21, if you are using setRequiredNetworkType(int) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <!-- Required on all api levels if you are using setPersisted(true) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" >
    </uses-permission>

    <application
        android:name="sk.cestaplus.cestaplusapp.utilities.CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/new_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.WithoutActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.account_activities.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <!-- - we must set android:theme="@style/AppTheme.WithoutActionBar" because we use
               custom toolbar instead of built-in support toolbar in this activity
             - was used in ArticleActivity: android:configChanges="orientation|screenSize"
               https://developer.android.com/guide/topics/manifest/activity-element.html#config
             -->
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.ArticleActivity"
            android:theme="@style/AppTheme.WithoutActionBar">
        </activity>

        <!-- was used in BaterkaActivity: android:configChanges="orientation|screenSize"
             https://developer.android.com/guide/topics/manifest/activity-element.html#config
        -->
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.BaterkaActivity"
            android:label="Baterka"
            android:theme="@style/AppTheme.WithoutActionBar">
        </activity>

        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.account_activities.NotLoggedActivity"
            android:label="@string/title_activity_not_logged" >
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.account_activities.LoggedActivity"
            android:label="@string/title_activity_logged" >
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.other_activities.OPortaliActivity"
            android:label="@string/title_activity_oportali" >
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.other_activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <service
            android:exported="true"
            android:name="sk.cestaplus.cestaplusapp.services.UpdateService">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

        <!-- DATABASE MANAGER
            SOURCE: https://github.com/sanathp/DatabaseManager_For_Android

        <activity android:name="sk.cestaplus.cestaplusapp.utilities.sqlDatabaseManager.AndroidDatabaseManager"
            android:theme="@style/Theme.AppCompat.Light"/>
            -->
    </application>

</manifest>
