<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.cestaplus.cestaplusapp" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <!-- Always required on api < 21, needed to keep a wake lock while your job is running -->
    <uses-permission android:name="android.permission.WAKE_LOCK" >
    </uses-permission>

    <!-- Required on api < 21, if you are using setRequiredNetworkType(int) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <!-- Required on all api levels if you are using setPersisted(true) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" >
    </uses-permission>

    <application
        android:name="sk.cestaplus.cestaplusapp.utilities.CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/new_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Base" >

        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.ArticleActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_clanok" >
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.BaterkaActivity"
            android:configChanges="orientation|screenSize"
            android:label="Baterka" >
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.SectionActivity"
            android:label="@string/title_activity_rubrika_aktivity"
            android:parentActivityName="sk.cestaplus.cestaplusapp.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sk.cestaplus.cestaplusapp.activities.MainActivity" />
        </activity>

        <service
            android:name="sk.cestaplus.cestaplusapp.services.UpdateService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" >
        </service>

        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.konto_activities.NotLoggedActivity"
            android:label="@string/title_activity_konto" >
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.konto_activities.LoggedActivity"
            android:label="@string/title_activity_logged" >
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.OPortaliActivity"
            android:label="@string/title_activity_oportali" >
        </activity>
        <activity
            android:name="sk.cestaplus.cestaplusapp.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

    <!--
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
            />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    -->
    </application>

</manifest>
